PROGNAME = outlaw.tos

CC = cc68x
AS = gen
CD = cd
RM = Rm

CFLAGS= -I..\src\include \
-I..\assets
 
ASFLAGS = -D -L2

C_OBJ = \
obj\events.o \
obj\model.o \
obj\raster.o \
obj\renderer.o \
obj\outlaw.o \
obj\util.o \
obj\input.o \
obj\screen.o \
obj\effects.o \
obj\music.o \
obj\psg.o \
obj\init.o \
obj\isr.o \
obj\vbl.o \
obj\serial.o

ASM_OBJ = \
obj\clear.o \
obj\super.o \
obj\scnbuf.o \
obj\thunk.o \
obj\ikbd.o

OBJ = $(C_OBJ) $(ASM_OBJ)

$(PROGNAME): $(OBJ)
	$(CC) -o $(PROGNAME) $(OBJ)

obj\serial.o: ..\src\c\serial.c
	$(CC) $(CFLAGS) -c $< -o $@
obj\vbl.o: ..\src\c\vbl.c
	$(CC) $(CFLAGS) -c $< -o $@
obj\init.o: ..\src\c\init.c
	$(CC) $(CFLAGS) -c $< -o $@
obj\input.o: ..\src\c\input.c
	$(CC) $(CFLAGS) -c $< -o $@
obj\events.o: ..\src\c\events.c
	$(CC) $(CFLAGS) -c $< -o $@
obj\model.o: ..\src\c\model.c
	$(CC) $(CFLAGS) -c $< -o $@
obj\raster.o: ..\src\c\raster.c
	$(CC) $(CFLAGS) -c $< -o $@
obj\renderer.o: ..\src\c\renderer.c
	$(CC) $(CFLAGS) -c $< -o $@
obj\outlaw.o: ..\src\c\outlaw.c
	$(CC) $(CFLAGS) -c $< -o $@
obj\util.o: ..\src\c\util.c
	$(CC) $(CFLAGS) -c $< -o $@
obj\screen.o: ..\src\c\screen.c
	$(CC) $(CFLAGS) -c $< -o $@
obj\effects.o: ..\src\c\effects.c
	$(CC) $(CFLAGS) -c $< -o $@
obj\music.o: ..\src\c\music.c
	$(CC) $(CFLAGS) -c $< -o $@
obj\psg.o: ..\src\c\psg.c
	$(CC) $(CFLAGS) -c $< -o $@
obj\isr.o: ..\src\c\isr.c
	$(CC) $(CFLAGS) -c $< -o $@

obj\clear.o: ..\src\asm\clear.s
	$(AS) $(ASFLAGS) $< -o$@
obj\super.o: ..\src\asm\super.s
	$(AS) $(ASFLAGS) $< -o$@
obj\scnbuf.o: ..\src\asm\scnbuf.s
	$(AS) $(ASFLAGS) $< -o$@
obj\thunk.o: ..\src\asm\thunk.s
	$(AS) $(ASFLAGS) $< -o$@
obj\ikbd.o: ..\src\asm\ikbd.s
	$(AS) $(ASFLAGS) $< -o$@

clean:
	!$(RM) $(PROGNAME) $(OBJ)
